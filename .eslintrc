{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "array-callback-return": 2,
    "arrow-body-style": 2,
    "arrow-parens": 1,
    "arrow-spacing": 2,
    "block-scoped-var": 2,
    "comma-spacing": 2,
    "comma-style": 2,
    "curly": 2,
    "dot-notation": 2,
    "eqeqeq": 2,
    "func-call-spacing": 2,
    "keyword-spacing": 2,
    "linebreak-style": 2,
    "lines-around-comment": 2,
    "no-await-in-loop": 2,
    "no-console": 1,
    "no-control-regex": 0,
    "no-duplicate-imports": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-label": 2,
    "no-global-assign": 2,
    "no-implicit-globals": 2,
    "no-labels": 2,
    "no-multi-str": 2,
    "no-multiple-empty-lines": 2,
    "no-prototype-builtins": 0,
    "no-restricted-imports": 2,
    "no-trailing-spaces": 2,
    "no-unsafe-negation": 2,
    "no-unused-vars": 1,
    "no-useless-computed-key": 1,
    "no-useless-rename": 1,
    "no-var": 2,
    "prefer-const": 1,
    "prettier/prettier": 1,
    "require-atomic-updates": 0,
    "rest-spread-spacing": 2,
    "semi": 1,
    "space-before-blocks": 2,
    "space-in-parens": 2,
    "space-infix-ops": 2,
    "space-unary-ops": 2,
    "spaced-comment": 2,
    "no-undef": 1,
    "no-empty": 1
  },
  "ignorePatterns": [
    "**/deprecated/**",
    "node_modules/**",
    "dist/**",
    "tmp/**",
    "worker/**",
    "lib/utils/sys-template.js",
    "lib/utils/fetchAdapter.js",
    "lib/starters/cf-worker.js",
    "lib/views/",
    "ncc/**",
    "lib/utils/tiny-sha1.js"
  ]
}
